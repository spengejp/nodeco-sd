<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <h2 class="text-dark" style="font-size: 1.4em;"><%= __('main_info') %></h2>
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="content">
    <div class="container-fluid">
        <div class="motd-message"></div>

        <ul class="list-group shadow-sm mb-3">
            <li class="list-group-item bg-gradient-primary">
                <h3 class="card-title" style="font-weight: bold; font-size: 1.0em;"><%= __('network') %></h3>
            </li>
            <li class="list-group-item">
                <%= __('last_updated') %> : <span class="cl_time"><%= __('retrieving') %></span><span class="os_time"
                    style="display: none;"></span>
                <span class="synced"></span> <span class="network"></span>
            </li>
            <li class="list-group-item xtz_block" style="display: none;">
                XTZ = <span class="xtz_price"></span>
            </li>
            <li class="list-group-item text-center">Block : <span class="cur_block">?</span> (Cycle <span
                    class="cur_cycle">?</span>)<br>
                <div class="row mt-1">
                    <div class="col-md-2 col-sm-2 col-3 text-right">
                        <span class="cur_cycle_begin"></span>
                    </div>
                    <div class="col-md-8 col-sm-8 col-6">
                        <div class="progress">
                            <div class="progress-bar bg-primary progress-bar-striped cur_cycle_per" role="progressbar"
                                aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
                                <span class="sr-only"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-2 col-3 text-left">
                        <span class="cur_cycle_end"></span>
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <%= __('next_schedule') %><br>
                <i class="fa fa-cube fa-fw"></i> Block <span class="next_bake_level">?</span>
                <small>(<%= __('around') %>
                    <span class="next_bake_remain">?</span> <%= __('minutes_later') %>)</small>
                <br>
                <i class="fa fa-check-circle fa-fw"></i> Block <span class="next_endorse_level">?</span> <small>(<%= __('around') %>
                    <span class="next_endorse_remain">?</span> <%= __('minutes_later') %>)</small>
            </li>
        </ul>
    </div>
</div>
<!-- /.content -->


<div class="content">
    <div class="container-fluid">
        <ul class="list-group shadow-sm mb-3">

            <li class="list-group-item bg-gradient-primary">
                <h3 class="card-title" style="font-weight: bold; font-size: 1.0em;"><%= __('wallet') %></h3>
            </li>

            <li class="list-group-item">
                <span class="watch_name">?</span> : <span class="watch_pkh">?</span>
            </li>

            <li class="list-group-item">
                <div class="row">
                    <div class="col-md-6 col-sm-12 col-12">
                        <div class="info-box bg-gradient-primary">
                            <span class="info-box-icon"><img src="img/tezos_white.png"></span>

                            <div class="info-box-content">
                                <span class="info-box-text"><%= __('balance') %></span>
                                <span class="info-box-number"><span class="total_balance">? ꜩ</span> <span
                                        class="total_balance_fiat"></span></span>
                                <!--<span class="info-box-text"><%= __('under_delegation_of') %></span>
                                <span class="info-box-number"><span class="delegate_balance">? ꜩ</span> <span
                                    class="delegate_balance_fiat"></span></span>-->
                                <div class="progress">
                                    <div class="progress-bar useable_balance_per" style="width: 0%"></div>
                                </div>
                                <span class="progress-description">
                                    <span class="useable_balance_per_txt">0%</span> <%= __('usable') %>
                                </span>
                                <small class="info-box-text">(<span class="frozen_balance">? ꜩ</span> <%= __('lock_state') %>)</small>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 col-12">
                        <div class="info-box bg-gradient-primary">
                            <span class="info-box-icon"><img src="img/tezos_white.png"></span>
                            <div class="info-box-content">
                                <span class="info-box-text"><%= __('stake_tz') %></span>
                                <span class="info-box-number"><span class="staking_balance">? ꜩ</span> <span
                                        class="staking_balance_fiat"></span></span>
                                <div class="progress">
                                    <div class="progress-bar over_delegate_per" style="width: 0%"></div>
                                </div>
                                <span class="progress-description">
                                    <span class="over_delegate_per_txt">0%</span> <%= __('used') %>
                                </span>
                                <small class="info-box-text">(<%= __('maximum') %> <span class="over_delegate_balance">?</span>)</small>
                            </div>
                        </div>
                    </div>
                </div>
            </li>

            <li class="list-group-item">
                <div class="d-flex justify-content-between">
                    <p><%= __('balance_chart') %></p>
                    <a href="./data"><%= __('display_a_report') %></a>
                </div>
                <div class="card-body">
                    <div class="d-flex">
                        <p class="ml-auto d-flex flex-column text-right">
                            <span class="xtz_diff_per"></span>
                            <span class="text-muted"><span class="xtz_diff"></span></span>
                        </p>
                        <p class="ml-auto d-flex flex-column text-right">
                            <span class="fiat_diff_per"></span>
                            <span class="text-muted"><span class="fiat_diff"></span></span>
                        </p>
                    </div>
                    <!-- /.d-flex -->

                    <div class="mb-4">
                        <canvas id="balance-chart" height="240" width="640" class="chartjs-render-monitor"
                            style="display: block; width: 640px; height: 240px;"></canvas>
                    </div>
                </div>
            </li>

        </ul>
    </div>
</div>
<!-- /.content -->